{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{.Path}}",
  "blocks": [
      {
          "type": "newline"
      },
      {
          "type": "prompt",
          "alignment": "left",
          "segments": [
              {
                  "type": "path",
                  "style": "plain",
                  "foreground": "#57C7FF",
                  "properties": {
                      "prefix": "",
                      "style": "full"
                  }
              }
          ]
      },
      {
          "type": "prompt",
          "alignment": "left",
          "segments": [
              {
                  "type": "git",
                  "style": "plain",
                  "foreground": "darkGray",
                  "properties": {
                      "branch_icon": "",
                      "branch_identical_icon": "≡",
                      "branch_ahead_icon": "↑",
                      "branch_behind_icon": "↓",
                      "branch_gone_icon": "≢",
                      "display_status": true,
                      "display_status_detail": true,
                      "display_stash_count": false,
                      "status_separator_icon": " |",
                      "local_working_icon": "",
                      "local_staged_icon": "",
                      "stash_count_icon": "",
                      "commit_icon": "",
                      "tag_icon": "",
                      "rebase_icon": "",
                      "cherry_pick_icon": "",
                      "merge_icon": "",
                      "no_commits_icon": "",
                      "display_upstream_icon": false
                  }
              }
          ]
      },
      {
          "type": "newline"
      },
      {
          "alignment": "left",
          "type": "prompt",
          "segments": [
              {
                  "type": "exit",
                  "style": "plain",
                  "foreground": "#FF6AC1",
                  "properties": {
                      "prefix": "❯❯",
                      "display_exit_code": false,
                      "error_color": "#FF5C57",
                      "always_enabled": true
                  }
              }
          ]
      }
  ]
}
